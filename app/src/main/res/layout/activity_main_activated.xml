<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_activated"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vasco.orchestration.sample.MainActivity"
    tools:ignore="RtlHardcoded"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_select_user"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected User: " />

        <Spinner
            android:id="@+id/spinner_select_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_select_user" />

        <Button
            android:id="@+id/btn_add"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_select_user"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Add User" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_select_user"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/btn_add"
            android:text="Delete User" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_la_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Authentication" />

        <TextView
            android:id="@+id/txt_la_subtitle"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_la_title"
            android:text="Generate one-time passwords on the device using any supported protection type (password, biometric)" />

        <Button
            android:id="@+id/btn_la"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_la_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Try it" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_lt_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Transaction" />

        <TextView
            android:id="@+id/txt_lt_subtitle"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_lt_title"
            android:text="Sign a transaction on the device using any supported protection type (password, biometric)" />

        <Button
            android:id="@+id/btn_lt"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_lt_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Try it" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_cp_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change PIN" />

        <TextView
            android:id="@+id/txt_cp_subtitle"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cp_title"
            android:text="Change your PIN using the button below" />

        <Button
            android:id="@+id/btn_cp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cp_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Try it" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_gi_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Information" />

        <TextView
            android:id="@+id/txt_gi_subtitle"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_gi_title"
            android:text="Get basic user information such as the DIGIPASS serial number or the client/server time shift" />

        <Button
            android:id="@+id/btn_gi"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_gi_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Try it" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/txt_cddc_title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate CDDC Message" />

        <TextView
            android:id="@+id/txt_cddc_subtitle"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cddc_title"
            android:text="Generate CDDC Message, using collected information during Orchestration life cycle." />

        <Button
            android:id="@+id/btn_cddc"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cddc_subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Try it" />

    </RelativeLayout>
</LinearLayout>
